    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "framer-motion": "^12.26.2",
    "motion": "^12.26.2",
    "next": "16.1.1",
    "phaser": "^3.90.0",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "simplex-noise": "^4.0.3",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
