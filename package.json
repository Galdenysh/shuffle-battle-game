  "keywords": ["phaser", "phaser3", "next", "nextjs", "vite", "typescript"],
  "scripts": {
    "log": "node log.js",
    "dev": "concurrently -n \"SERWIST,LOG,NEXT\" -c \"cyan,magenta,green\" \"serwist build --watch\" \"npm run log dev\" \"next dev -p 8080\"",
    "build": "npm run log build & next build && serwist build",
    "dev-nolog": "concurrently -n \"SERWIST,NEXT\" -c \"cyan,green\" \"serwist build --watch\" \"next dev -p 8080\"",
    "build-nolog": "next build && serwist build",
    "start": "next start -p 8080"
  },
